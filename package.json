{
    "name": "linkme",
    "version": "0.0.1",
    "license": "MIT",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "eslint": "npx eslint --ext .jsx,.js,.tsx,.ts ./ --fix",
        "prettier": "prettier --write \"*.+(json|css)\""
    },
    "dependencies": {
        "firebase": "8.1.1",
        "next": "10.0.3",
        "precise-ui": "1.5.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-hook-form": "6.12.0",
        "styled-components": "5.2.1",
        "styled-reset": "4.3.1"
    },
    "devDependencies": {
        "@types/node": "14.14.10",
        "@types/react": "17.0.0",
        "@types/react-dom": "17.0.0",
        "@types/styled-components": "5.1.4",
        "@typescript-eslint/eslint-plugin": "4.8.2",
        "@typescript-eslint/parser": "4.8.2",
        "babel-plugin-styled-components": "1.12.0",
        "eslint": "7.14.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.21.5",
        "husky": "5.0.4",
        "lint-staged": "10.5.2",
        "next-transpile-modules": "5.0.0",
        "prettier": "2.2.1",
        "typescript": "4.1.2"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{json,css}": [
            "prettier --write"
        ],
        "*.{js,ts,tsx,jsx}": [
            "eslint --fix"
        ]
    }
}
